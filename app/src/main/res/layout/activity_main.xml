<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/dark">

    <RelativeLayout
        android:id="@+id/LogoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:contentDescription="LogoDicoDeutsch"
            android:src="@drawable/ic_logofull"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LogoContainer"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@id/TranslateButton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/dark_gray"
                android:textAlignment="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@id/LogoTranslate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_translate"
                    android:contentDescription="LogoTranslation"
                    android:layout_marginTop="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LogoTranslate"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:text="CHERCHER UN MOT"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@id/SwitchTranslate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    >
                </Button>
            </RelativeLayout>
            <RelativeLayout
                android:id="@id/ExercicesButton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/dark_gray"
                android:textAlignment="center">

                <ImageView
                    android:id="@id/LogoExercices"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_translate"
                    android:contentDescription="LogoExercices"
                    android:layout_marginTop="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LogoExercices"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:text="EXERCICE FRANCAIS VERS ALLEMAND"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/SwitchExercices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"></Button>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>